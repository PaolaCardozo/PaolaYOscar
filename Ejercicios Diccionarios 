        "monedas = {'Euro':'€', 'Dollar':'$', 'Yen':'¥'}\n",
        "moneda = input(\"Introduce una divisa: \")\n",
        "if moneda.title() in monedas:\n",
        "    print(\"la divisa: \" + moneda + \" corresponde al simbolo \"+ monedas[moneda.title()])\n",
        "else:\n",
        "    print(\"La divisa \"+ moneda +\" no está registrada, intente nuevamente.\")"
      ]
